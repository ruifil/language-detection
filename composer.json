  "keywords": ["language", "detection", "detect"],
  "homepage": "https://github.com/ruifil/language-detection",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Patrick Schur",
      "email": "patrick_schur@outlook.de"
    },
    {
      "name": "Rui Filipe Da Cunha Alves",
      "email": "ruifil@ruifil.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "LanguageDetection\\": "src/LanguageDetection"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LanguageDetection\\Tests\\": "tests"
    }
  },
  "require": {
